<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditGuideProfileActivity"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/etName"
            android:layout_width="250dp"
            android:layout_height="45dp"

            android:layout_marginLeft="90dp"
            android:background="@drawable/login_edittext_style"
            android:hint="Enter Name"
            android:textAlignment="center"
            />
        <EditText
            android:layout_below="@+id/etName"
            android:id="@+id/etEmail"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_style"
            android:hint="Enter Email"
            android:textAlignment="center"/>
        <EditText
            android:layout_below="@id/etEmail"
            android:id="@+id/etPassword"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_style"
            android:hint="Enter Password"
            android:textAlignment="center"/>
        <EditText
            android:layout_below="@id/etPassword"
            android:id="@+id/etPhno"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_style"
            android:hint="Enter Phone Number"
            android:textAlignment="center"/>
        <EditText
            android:layout_below="@id/etPhno"
            android:id="@+id/etPlaceT"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_style"
            android:hint="Enter Place of Tour"
            android:textAlignment="center"/>
        <Button
            android:layout_below="@id/etPlaceT"
            android:id="@+id/updateb"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/reg_btn_style"
            android:textColor="#fff"
            android:text="update"/>
        <Button
            android:layout_below="@id/subplc"
            android:id="@+id/adpbtn"
            android:layout_width="150dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/add_btn_style"
            android:textColor="#fff"
            android:text="Add Details"
            android:layout_marginLeft="140dp"/>
        <EditText
            android:layout_below="@id/updateb"
            android:id="@+id/subplc"
            android:layout_width="300dp"
            android:background="@drawable/login_edittext_style"
            android:layout_height="45dp"
            android:hint="Write tour description"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"/>
        <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="130dp"
        app:srcCompat="@drawable/ic_person" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="130dp"
            app:srcCompat="@drawable/ic_email" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="119dp"
            app:srcCompat="@drawable/ic_psd" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="100dp"
            app:srcCompat="@drawable/ic_phone" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="100dp"
            app:srcCompat="@drawable/ic_place" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="352dp"
            android:layout_marginLeft="75dp"
            app:srcCompat="@drawable/ic_note" />

    </RelativeLayout>

</RelativeLayout>